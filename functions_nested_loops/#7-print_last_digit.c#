#include "main.h"

/**
 * main - prints the last digit of a number
 * @n: the number to extract the last digit from
 *
 * Return: the value of the last digit
 */

int print_last_digit(int n)
{
  int last_digit;

  if (n < 0)
    last_digit = -1 * (n % 10);
  else
    last_digit = n % 10;

  _putc + '0');
  return (last_digit);
}
